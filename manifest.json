{
  "manifest_version": 3,
  "name": "Meter",
  "description": "Track time spent per website, daily.",
  "version": "0.2",

  "icons": {
    "16": "src/resources/logo.png",
    "48": "src/resources/logo.png",
    "128": "src/resources/logo.png"
  },

  "action": {
    "default_popup": "popup.html"
  },

  "background": {
    "service_worker": "dist/background.js",
    "type": "module"
  },

  "options_ui": {
    "page": "settings.html",
    "open_in_tab": true
  },

  "permissions": [
    "tabs",
    "storage",
    "idle"
  ],

  "host_permissions": [
    "<all_urls>"
  ]
}
